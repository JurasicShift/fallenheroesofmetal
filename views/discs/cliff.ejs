<% layout("layouts/boilerplate") -%>
<section class="jumbo__section">
    <div class="container">
        <h3 class="text-center pl-4 pr-4 base__title">Discography</h3>
    </div>
    <div class="container disc__cont mt-5">
    <div class="media">
        <img src="/img/cliff3.jpg" class="disc__img" alt="cliff burton">
        <div class="media-body">
            <h5 class="text-center disc__name">Cliff Burton</h5>
        </div>
      </div>
    </div>
</section>
<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table__cont table-dark table-borderless mt-5">
                    <thead>
                        <tr class="table__data">
                            <th scope="col">Album Sleeve</th>
                            <th scope="col">Title</th>
                            <th scope="col">Year</th>
                            <th scope="col">Band</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table__data">
                            <th><img class="table__img" src="/img/kill.jpg" alt="kill em all"></th>
                            <td>Kill em All</td>
                            <td>1983</td>
                            <td>Metallica</td>
                        </tr>
                        <tr class="table__data">
                            <th><img class="table__img" src="/img/ride.jpg" alt="ride the lightning"></th>
                            <td>Ride the Lightning</td>
                            <td>1984</td>
                            <td>Metallica</td>
                        </tr>
                        <tr class="table__data">
                            <th><img class="table__img" src="/img/puppets.jpg" alt="master of puppets"></th>
                            <td>Master of Puppets</td>
                            <td>1986</td>
                            <td>Metallica</td>
                        </tr>
                        <tr class="table__data">
                            <th><img class="table__img" src="/img/justice.jpg" alt="and justice for all"></th>
                            <td>...And Justice for All<br><span class="table__span">(writing credit).</span></td>
                            <td>1988</td>
                            <td>Metallica</td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>

      <div class="style-line"></div>
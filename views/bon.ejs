<% layout("layouts/boilerplate") -%>
<section class="jumbo__section">
    <div class="jumbotron jumbo--bon container">
        <div class="jumbo__cont">
            <div class="jumbo__group">
                <h2 class="jumbo__title mb-3">Bon Scott</h2>
                 <p class="jumbo__date mb-3">1946 - 1980</p>
            </div>
            <form action="/bondisc" method="GET" id="bonDisc">
                <input type="submit" class="btn btn-md text-center basebtn basebtn--jumbo" form="bonDisc" role="button" value="Discography">
            </form>
        </div>
     </div>
    <div class="style-line"></div>
    <div class="quote container">
        <div class="media">
            <div class="media-body">
                <blockquote class="blockquote text-center">
                    <p class="quote__p quote__p--bon">"He was one of the dirtiest fuckers I know"</p>
                    <footer class="blockquote-footer">Angus Young of AC/DC </footer>
                </blockquote>
            </div>
            <img src="/img/bon5.jpg" class="ml-3 quote__img" alt="david dreiman">
        </div>
    </div>
    <div class="style-line"></div>
</section>
